<form action="/songs" method="post">
  <input type="text" id="Name" name="song[name]" />
  <% Genre.all.each do |genre| %>
    <%= genre.name %>
    <input type="checkbox" name="song[genre_ids][]" value=<%= genre.id %> id=<%= genre.id %> />
    <label for=<%= genre.id %>><%= genre.name %></label>
  <% end %>
  <label for="artist_name">Artist Name</label>
  <input type="text" id="artist_name" name="artist[name]" />
  <input type="submit" value="Create">
</form>
